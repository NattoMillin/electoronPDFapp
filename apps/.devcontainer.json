{
  "name": "Electoron Container",
  "dockerComposeFile": "../docker-compose.yml",
  "workspaceFolder": "/home/node/dev",
  "service": "electoronContainer",
  "runServices": [
    "electoronContainer"
  ],
  // リモート先のVS Codeにインストールする拡張機能
  "customizations": {
    "vscode": {
      "extensions": [
        "vscode-icons-team.vscode-icons",
        "formulahendry.auto-rename-tag",
        "Formulahendry.auto-close-tag",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "VisualStudioExptTeam.vscodeintellicode",
        "dsznajder.es7-react-js-snippets",
        "bradlc.vscode-tailwindcss",
        "vscodeshift.mui-snippets"
        // "blanu.vscode-styled-jsx"
      ],
      "settings": {
        "editor.fontFamily": "'Source Han Code JP'",
        "terminal.integrated.fontFamily": "'Source Han Code JP'",
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "workbench.iconTheme": "vscode-icons"
      }
    }
  },
  "shutdownAction": "stopCompose"
}
